<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head") %>
  <title>Dashboard | Your App</title>
  <link rel="stylesheet" href="/css/animations.css">
  <style>
    .dashboard-gradient {
      background: linear-gradient(120deg, #1e3a8a, #3b82f6);
    }
    
    .card {
      transition: all 0.3s ease;
    }
    
    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
    
    .profile-img {
      background: linear-gradient(45deg, #3b82f6, #1e40af);
    }
    
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    .animate-slide-in {
      animation: slideIn 0.6s ease-out forwards;
    }
    
    .stats-card {
      opacity: 0;
      animation: fadeIn 0.8s ease-out forwards;
    }
    
    .stats-card:nth-child(1) { animation-delay: 0.2s; }
    .stats-card:nth-child(2) { animation-delay: 0.4s; }
    .stats-card:nth-child(3) { animation-delay: 0.6s; }
    .stats-card:nth-child(4) { animation-delay: 0.8s; }
    
    /* Progress bar animation */
    @keyframes progress {
      from { width: 0; }
    }
    
    .progress-bar {
      animation: progress 1.5s ease-out forwards;
      animation-delay: 1s;
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="dashboard-gradient text-white shadow-lg">
    <div class="container mx-auto px-4 py-6">
      <div class="flex justify-between items-center">
        <div class="flex items-center animate-slide-in">
          <div class="hidden md:block">
            <div class="profile-img w-16 h-16 rounded-full flex items-center justify-center text-white text-xl font-bold shadow-lg">
              <%= user.email.charAt(0).toUpperCase() %>
            </div>
          </div>
          <div class="ml-4">
            <h1 class="text-2xl font-bold">Welcome, <%= user.email.split('@')[0] %>!</h1>
            <p class="text-blue-100">Your personal dashboard</p>
          </div>
        </div>
        <nav class="flex space-x-2">
          <a href="#" class="btn bg-white text-blue-700 px-4 py-2 rounded-lg hover:bg-blue-50 transition duration-300">
            <span class="hidden md:inline">Dashboard</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </a>
          <a href="/logout" class="btn btn-ripple bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg shadow transition duration-300 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span class="hidden md:inline">Logout</span>
          </a>
        </nav>
      </div>
    </div>
  </div>
  
  <div class="container mx-auto px-4 py-8">
    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="stats-card bg-white rounded-xl shadow p-6 flex items-center">
        <div class="rounded-full bg-blue-100 p-3 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-medium">Last Login</p>
          <p class="text-xl font-bold">Today</p>
        </div>
      </div>
      
      <div class="stats-card bg-white rounded-xl shadow p-6 flex items-center">
        <div class="rounded-full bg-green-100 p-3 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-medium">Status</p>
          <p class="text-xl font-bold">Active</p>
        </div>
      </div>
      
      <div class="stats-card bg-white rounded-xl shadow p-6 flex items-center">
        <div class="rounded-full bg-purple-100 p-3 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-medium">Plan</p>
          <p class="text-xl font-bold">Free</p>
        </div>
      </div>
      
      <div class="stats-card bg-white rounded-xl shadow p-6 flex items-center">
        <div class="rounded-full bg-yellow-100 p-3 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-medium">Rewards</p>
          <p class="text-xl font-bold">0 points</p>
        </div>
      </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main content section -->
      <div class="lg:col-span-2 space-y-8">
        <div class="bg-white rounded-xl shadow p-6 card">
          <h2 class="text-xl font-bold mb-4">Welcome to Your Dashboard</h2>
          <p class="text-gray-600 mb-4">Thank you for being a member of our platform. This is your personal dashboard where you can manage your account and access all our features.</p>
          
          <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-blue-700">
                  Your account is now set up and ready to use. Explore the features below to get started.
                </p>
              </div>
            </div>
          </div>
          
          <h3 class="font-medium text-gray-700 mb-2">Complete your profile</h3>
          <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="progress-bar bg-blue-600 h-2.5 rounded-full" style="width: 25%"></div>
          </div>
          <p class="text-sm text-gray-500 mt-2">25% complete</p>
          
          <div class="mt-6">
            <button class="btn btn-ripple bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg shadow transition duration-300">
              Complete Setup
            </button>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow p-6 card">
          <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
          <div class="space-y-4">
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
              <div class="rounded-full bg-blue-100 p-2 mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
              </div>
              <div>
                <p class="font-medium">Logged in</p>
                <p class="text-sm text-gray-500">Just now</p>
              </div>
            </div>
            
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
              <div class="rounded-full bg-green-100 p-2 mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
              </div>
              <div>
                <p class="font-medium">Account created</p>
                <p class="text-sm text-gray-500">Today</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sidebar content -->
      <div class="space-y-8">
        <div class="bg-white rounded-xl shadow p-6 card">
          <h2 class="text-xl font-bold mb-4">Account Information</h2>
          <div class="space-y-3">
            <div>
              <p class="text-sm text-gray-500">Email</p>
              <p class="font-medium"><%= user.email %></p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Account Type</p>
              <p class="font-medium">Standard</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Member Since</p>
              <p class="font-medium">May 5, 2025</p>
            </div>
          </div>
          
          <hr class="my-4 border-gray-200">
          
          <div class="space-y-3">
            <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit Profile
            </a>
            <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              Change Password
            </a>
            <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Account Settings
            </a>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-xl shadow p-6 text-white card">
          <h2 class="text-xl font-bold mb-4">Upgrade Your Plan</h2>
          <p class="mb-6">Unlock premium features and get more from your account.</p>
          <button class="w-full bg-white text-blue-700 font-medium py-2 rounded-lg hover:bg-blue-50 transition duration-300 btn-ripple">
            View Plans
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <footer class="bg-white border-t mt-12 py-6">
    <div class="container mx-auto px-4">
      <p class="text-center text-gray-500 text-sm">Â© 2025 Your App. All rights reserved.</p>
    </div>
  </footer>
  
  <script src="/js/animations.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add card hover animation
      const cards = document.querySelectorAll('.card');
      
      cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-10px)';
          this.style.boxShadow = '0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)';
        });
        
        card.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
          this.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)';
        });
      });
    });
  </script>
</body>
</html>